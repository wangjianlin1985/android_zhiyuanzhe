<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="UserInfo" table="UserInfo">

          <!-- 主键用户名 -->
          <id name="user_name" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 简单字符串属性: 登录密码 -->
          <property
            name="password"
            column="password"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 邮箱 -->
          <property
            name="email"
            column="email"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 姓名 -->
          <property
            name="name"
            column="name"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 性别 -->
          <property
            name="sex"
            column="sex"
            type="string"
            length="4"
          />

          <!-- 简单图片属性: 用户照片 -->
          <property
            name="userPhoto"
            column="userPhoto"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 学校学院 -->
          <property
            name="schoolName"
            column="schoolName"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 年级专业 -->
          <property
            name="specialInfo"
            column="specialInfo"
            type="string"
            length="40"
          />

          <!-- 简单字符串属性: 民族 -->
          <property
            name="nation"
            column="nation"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 政治面貌 -->
          <property
            name="politicalStatus"
            column="politicalStatus"
            type="string"
            length="20"
          />

          <!-- 简单日期型属性: 出生日期 -->
          <property
            name="birthday"
            column="birthday"
            	type="timestamp"
            	length="10"
          />

          <!-- 简单字符串属性: 证件号码 -->
          <property
            name="cardNumber"
            column="cardNumber"
            type="string"
            length="30"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 联系地址 -->
          <property
            name="address"
            column="address"
            type="string"
            length="80"
          />

          <!-- 简单字符串属性: 有兴趣的项目 -->
          <property
            name="interest"
            column="interest"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 个人介绍 -->
          <property
            name="introduce"
            column="introduce"
            type="string"
            length="5000"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
